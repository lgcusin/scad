		<class>ec.edu.uce.biometrico.jpa.Dependencia</class>
		<class>ec.edu.uce.biometrico.jpa.UsuarioRol</class>
		<class>ec.edu.uce.biometrico.jpa.Rol</class>
		<class>ec.edu.uce.biometrico.jpa.TipoMateria</class>
		<class>ec.edu.uce.biometrico.jpa.Feriado</class>
		<class>ec.edu.uce.biometrico.jpa.Cronograma</class>
		<class>ec.edu.uce.biometrico.jpa.CronogramaProcesoFlujo</class>
		<class>ec.edu.uce.biometrico.jpa.ProcesoFlujo</class>
		<class>ec.edu.uce.biometrico.jpa.PlanificacionCronograma</class>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect" />
			<property name="hibernate.connection.driver_class" value="oracle.jdbc.driver.OracleDriver" />
			<property name="hibernate.connection.url" value="jdbc:oracle:thin:@localhost:1521:orcl" />
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.jdbc.batch_size" value="30" />
			<property name="hibernate.order_inserts" value="true" />
			<property name="hibernate.connection.username" value="sa" />
			<property name="jboss.entity.manager.factory.jndi.name" value="java:/BiometricoEntityManagerFactory"/>
			<property name="hibernate.connection.release_mode" value="after_transaction" />
			<property name="hibernate.default_schema" value="sa" />
			<property name="hibernate.connection.password" value="admin" />
		</properties>
	</persistence-unit>
</persistence>
