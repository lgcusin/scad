		<class>ec.edu.uce.biometrico.jpa.FichaDocente</class>
		<class>ec.edu.uce.biometrico.jpa.Actividad</class>
		<class>ec.edu.uce.biometrico.jpa.Carrera</class>
		<class>ec.edu.uce.biometrico.jpa.DetallePuesto</class>
		<class>ec.edu.uce.biometrico.jpa.Herramienta</class>
		<class>ec.edu.uce.biometrico.jpa.MallaCurricular</class>
		<class>ec.edu.uce.biometrico.jpa.MallaCurricularMateria</class>
		<class>ec.edu.uce.biometrico.jpa.Materia</class>
		<class>ec.edu.uce.biometrico.jpa.Syllabo</class>
		<class>ec.edu.uce.biometrico.jpa.UnidadCurricular</class>
		<class>ec.edu.uce.biometrico.jpa.Asistencia</class>
		<class>ec.edu.uce.biometrico.jpa.Seguimiento</class>
		<class>ec.edu.uce.biometrico.jpa.TipoHuella</class>
		<class>ec.edu.uce.biometrico.jpa.HuellaDactilar</class>
		<class>ec.edu.uce.biometrico.jpa.Aula</class>
		<class>ec.edu.uce.biometrico.jpa.Paralelo</class>
		<class>ec.edu.uce.biometrico.jpa.MallaCurricularParalelo</class>
		<class>ec.edu.uce.biometrico.jpa.DiaSemana</class>
		<class>ec.edu.uce.biometrico.jpa.TipoHorario</class>
		<class>ec.edu.uce.biometrico.jpa.FichaEmpleado</class>
		<class>ec.edu.uce.biometrico.jpa.Metodologia</class>
		<class>ec.edu.uce.biometrico.jpa.Bibliografia</class>
		<class>ec.edu.uce.biometrico.jpa.RecursoDidactico</class>
		<class>ec.edu.uce.biometrico.jpa.Resultados</class>
		<class>ec.edu.uce.biometrico.jpa.ContenidoCurricular</class>
		<class>ec.edu.uce.biometrico.jpa.Persona</class>
