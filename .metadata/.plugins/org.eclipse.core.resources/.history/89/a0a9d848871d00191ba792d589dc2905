import javax.persistence.PersistenceContext;

import model.FichaDocente;
import model.Usuario;

/**
 * Session Bean implementation class DocenteBean
 */
@Stateless
@LocalBean
public class DocenteBean implements DocenteBeanLocal {

 
    public DocenteBean() {
        // TODO Auto-generated constructor stub
    }

	@Override
	public void guardar(FichaDocente fcdc) {
		
	}

	@Override
	public List<FichaDocente> listar(String parametro) {
		EntityManagerFactory emf = Persistence.createEntityManagerFactory("UnidadPersistencia");
		EntityManager em = emf.createEntityManager();
		List<FichaDocente> lst=em.createNamedQuery("Docente.listar",FichaDocente.class);
		Usuario usr = em.createNamedQuery("Usuario.finduser", Usuario.class).setParameter("nick", u.getUsrNick())
				.setParameter("clave", u.getUsrPassword()).getSingleResult();
		return null;
	}
    
    

}
